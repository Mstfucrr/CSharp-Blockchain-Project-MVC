@using RecycleCoin.Entities.Concrete
@{
    var bestAmount = ViewBag.bestAmount;
    var bestUser = ViewBag.bestUser as AppUser;
	var filterday = ViewBag.filterday;
}


<div id="statistic" style="">
    <div class="bubble">
        <div class="h-100 w-100">
            <ul>
                <li>
                    Son <input id="dayInput" type="number" min="1" class="form-control d-inline-block" style="font-size: 14px;width: 34%" value="@filterday"/> günde
                </li>
                @if (bestUser != null)
                {
	                <li>
		                Ençok Geri dönüşüm yapan Kullanıcı : 
	                </li>
	                <li style="font-weight: bold">
		                @bestUser.Name @bestUser.Lastname
	                </li>
	                <li>
		                Yaptığı geri dönüşüm sayısı : @bestAmount 
	                </li>
                }

            </ul>
            <button id="statisticPanelClose" class="btn btn-primary">Kapat</button>
        </div>
    </div>

</div>




<script type="text/javascript">
    $("#showStatisticsBtn").click(function () {
        $("#statisticsPanel").toggleClass("activeStatisticPanel");
    });
    $("#statisticPanelClose").click(function () {
        $("#statisticsPanel").removeClass("activeStatisticPanel");
    });

    $("#dayInput").change(function () {
        $("#statisticsPanel").load(`/Admin/ShowUsers/GetStatistic?filterday=${parseInt(this.value)}`);
    });

</script>





