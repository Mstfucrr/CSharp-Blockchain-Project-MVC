@{
    ViewBag.Title = "Home Page";
    var chain = ViewBag.blockchain["chain"];

}

<header class="text-center text-white masthead" style="padding-top: 252px;margin-top: -18px;padding-bottom: 185px;">
    <div class="masthead-content">
        <div class="container">
            <h1 class="masthead-heading mb-0">
                <img class="bounce animated" src="../../image/transparent.png"
                     width="151" height="151">RecycleCoin
            </h1><a class="btn btn-primary btn-xl rounded-pill mt-5"
                    role="button" href="#">Learn More</a>
        </div>
    </div>
</header>
<section>
	<div class="container">
		<div class="row align-items-center" style="position: relative;">
			<div class="col d-lg-flex align-items-lg-center" id="blocks" style="overflow-x: auto;">

				@* Block 1 *@
				@for (var i = 0; i < chain.Count; i++)
				{
					var block = chain[i];
					<div class="card block" data-aos="zoom-in-down" data-aos-duration="600"
					     style="margin: 25px; min-width: 300px; max-width: 300px;" data-hash="@block["hash"]">
						<div class="card-header">
							<h4>
								Block @{ var d = i + 1;
								      }@d
							</h4>
						</div>
						<ul class="list-group list-group-flush list-group-flush">
							<li class="list-group-item"
							    style="padding-bottom: 0px; padding-right: 20px; padding-top: 24px;">
								<p style="margin-bottom: -17px;">Hash</p>
								<small>
									<br>
									<span style="color: rgb(205, 30, 157);">
										@block["hash"]
									</span><br><br><br>
								</small>
								<p style="margin-top: -16px; margin-bottom: -11px;">Hash of previous block<br></p>
								<small>
									<br><span style="color: rgb(205, 30, 157);">@block["previousHash"]</span><br><br><br>
								</small>
							</li>
							<li class="list-group-item" style="padding-bottom: 0px;">
								<p style="margin-bottom: 8px;">Nonce<br></p>
								<p style="font-size: 15px; color: #6127cb;">@block["nonce"]</p>
							</li>
							<li class="list-group-item">
								<p style="margin-bottom: 8px;">Timestamp<br></p>
								<p style="font-size: 15px; color: #2c8f36;">@block["timestamp"]</p>
							</li>
						</ul>
					</div>
				}
				@* Block 1 son *@

			</div>
			<div class="col" id="TransactionViewer"
			     style="position: absolute;width: 100%;height: 100%;overflow-y: auto;">
				<div style="width: 75%;position: relative;top: 25%;left: 50%;transform: translate(-50%);">
					<div class="table-responsive" data-aos="zoom-in" data-aos-delay="350">
						<table class="table table-striped table-dark" id="TransactionTable">
							<thead>
							<tr>
								<th>#</th>
								<th>Gönderen Adres</th>
								<th>Alıcı Adres</th>
								<th>Tutar</th>
								<th>Timestamp</th>
								<th>Geçerlilik Durumu</th>
							</tr>
							</thead>
							<tbody style="background: linear-gradient(0deg, #ff6a00, #ee0979);">
						
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>