@using RecycleCoin.Entities.Concrete
@{
    var user = ViewBag.User as AppUser;
}

@if (user != null)
{

    <div id="info" style="">
        <div class="bubble">
            <div class="h-100 w-100">
                <ul>

                    <li>Ad Soyad : @user.Name @user.Lastname</li>
                    <li>Kullanıcı Adı : @user.UserName</li>
                    <li>Email : @user.Email</li>
                    <li>Toplam karbon : @user.Carbon</li>

                </ul>

                <button id="infoClose" class="btn btn-primary">Kapat</button>
            </div>
        </div>

    </div>

    <style>
        .bubble div {
            display: flex;
            flex-direction: row;
            flex-wrap: nowrap;
            justify-content: space-between;
            align-content: center;
            align-items: flex-end;
            padding: 5px 17px;
        }

        .bubble ul {
            list-style-type: none;
        }

            .bubble ul li {
                margin: -65px;
            }
    </style>

}

<script>

    $("#infoClose").click(function () {


        $("#userInfo").css({
            "left": "-300px",
            "transform": "scaleX(0)"
        })
        $("#info .bubble").css(
            {
                "left": "-300px",
                "transform": "scaleX(0)"
            });
    })

</script>