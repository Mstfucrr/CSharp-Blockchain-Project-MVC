
@{
    ViewBag.Title = "CreateTransaction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section
	style="width: 100%; margin-top: -18px; padding-top: 180px; padding-bottom: 70px; background: linear-gradient(230deg, red, #ff00cb); min-height: 100vh; display: flex; justify-content: center; align-items: center;">
	<div
		style="background-color: #fff;width: 754.8px;height: 430px;box-shadow: 0px 0px 20px 1px;border-radius: 25px;">
		<div style="text-align: center;margin-top: 23px;">
			<h2>İşlem Yap</h2>
		</div>
		<div class="d-flex flex-column align-items-center">
			<form class="d-flex flex-column w-75" style="height: 100%;">
				<div class="form-group"><label for="fromAddress">Gönderici Adres</label><input class="form-control"
				                                                                               type="text" id="fromAddress" readonly=""></div>
				<div class="form-group"><label for="toAddress">Alıcı Adres</label><input class="form-control"
				                                                                         type="text" id="toAddress"></div>
				<div class="form-group"><label for="amount">Tutar</label><input class="form-control" type="text"
				                                                                id="amount"></div>
				<div class="form-group text-center mt-2">

					<a id="sendBtn" class="btn ConfirmBtn" href="#"
					   type="submit">Gönder</a>
				</div>
			</form>
		</div>
	</div>
</section>